#!/bin/bash


# Initial runs
# ------------

echo ">>>>>>> Initialize databases"

mkdir ~/.radisdb

# (to auto-download / cache some database files
# see https://github.com/radis/radis-lab/issues/9


echo ">>>>>>> Compute and cache GEISA lines"

cd ~/databases
python download_geisa.py


